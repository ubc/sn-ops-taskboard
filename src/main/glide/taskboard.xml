<?xml version="1.0" encoding="utf-8" ?>
<j:jelly trim="false" xmlns:j="jelly:core" xmlns:g="glide" xmlns:j2="null" xmlns:g2="null">

	<g2:evaluate id="evaluate2">
		<!-- evaluate2.js will be included here -->
	</g2:evaluate>

	<div xmlns="http://www.w3.org/1999/xhtml">
		<div>ok = $[ok]</div>

		<table>
			<thead>
				<tr>
					<th>Number</th>
					<th>Description</th>
					<th>Assigned to</th>
					<th>State</th>
					<th>Priority</th>
					<th>Opened</th>
				</tr>
			</thead>
			<tbody>
				<j2:while test="$[todoBoard.next()]">
					<tr>
						<td><a class="linked formlink" href="$[todoBoard.value().link]">$[todoBoard.value().number]</a></td>
						<td>$[todoBoard.value().short_description]</td>
						<j2:if test="$[!!todoBoard.value().assigned_to]">
							<td><a class="linked formlink" href="$[todoBoard.value().assigned_to_link]">$[todoBoard.value().assigned_to]</a></td>
						</j2:if>
						<j2:if test="$[!todoBoard.value().assigned_to]">
							<td>&#xA0;</td>
						</j2:if>
						<td>$[todoBoard.value().state]</td>
						<td>$[todoBoard.value().priority]</td>
						<td>$[todoBoard.value().opened_at]</td>
					</tr>
				</j2:while>
			</tbody>
		</table>
	</div>
</j:jelly>
